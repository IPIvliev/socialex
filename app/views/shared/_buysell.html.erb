		<div class="row-fluid">
			<div class="span6 top-30 color">
				<h4>Купить акции пользователя <%= @user.name %></h4>

				<div class="requests">
					<div class="request">
						<div class="row-fluid">
							<div class="span4">
									<%= form_for @stock, :url => {:controller => 'stocks', :action => 'deal'} do |f| %>

										Количество: <%= f.number_field :amount, :class => "amount-deal" %>
										Цена: <%= f.number_field :amount, :class => "amount-deal" %>
										<%= f.hidden_field :status, :value => 0 %>
										<%= f.submit "Купить", :class => "btn btn-success" %>
									<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="span6 top-30 color">
				<h4>Продать акции пользователя <%= @user.name %></h4>
				<div class="requests">
					<div class="request">
						<div class="span2">
									<%= form_for @stock, :url => {:controller => 'stocks', :action => 'deal'} do |f| %>

										Количество: <%= f.number_field :amount, :class => "amount-deal" %>
										Цена: <%= f.number_field :amount, :class => "amount-deal" %>
										<%= f.hidden_field :status, :value => 0 %>
										<%= f.submit "Продать", :class => "btn btn-danger" %>
									<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>