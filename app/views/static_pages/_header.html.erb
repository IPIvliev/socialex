<header>

	<div class="top">
	    <div class="container">   
    
	        <ul class="loginbar pull-right">
	            <li><i class="icon-globe"></i><a><%= I18n.t(:language) %> <i class="icon-sort-up"></i></a>
	                <ul class="nav-list">
	                    <li class="active"><a href="/ru/">Русский</a> <i class="icon-ok"></i></li>
	                    <li><a href="/en/">English</a></li>
	                </ul>
	            </li>   
	            <li class="devider">&nbsp;</li>
	            <li><a href="/help.html" class="login-btn"><%= I18n.t(:help) %></a></li>  
	           
	        </ul>

	    </div>      
	</div>   
<!--=== Header ===-->
	<div class="container top-30">

		<div class="row">
			<div class="col-md-4">
				<div class="logo">                                             
					<%= link_to image_tag("/logo.png"), root_path %>
				</div>   
			</div>
			<div class="col-md-4">
				<%= I18n.t(:header_text) if Settings.status == "test" %>
			</div>
			<div class="col-md-2">
				<% if current_user %>
					<%= link_to "# #{I18n.t(:exit)}", signout_path, id: "sign_out", :class => "btn btn-success btn-lg pull-center" %>
				<% else %>
					<%= link_to "# #{I18n.t(:account)}", "#", :class => "btn btn-success btn-lg pull-center", :data => {:toggle => "modal", :target => "#LogIn"} %>
				<% end %>

			</div>
			<div class="col-md-2">
				<span class="big green"> <%= User.all.count %> </span><br> 

			</div>
		</div>
	</div>
</header>

<%= render "/shared/loginmodal" %>